{{>layout/header}}

<!--    마이페이지 카테고리 이동-->
<div class="userinfo_category">
    <a href="/{{uid}}">
        <div class="userinfo_shortcuts">회원정보 수정</div>
    </a>
    <a href="/{{uid}}/review">
        <div class="userinfo_shortcuts">리뷰 관리</div>
    </a>
    <a href="/api/{{uid}}/like">
        <div class="userinfo_current">즐겨찾기 관리</div>
    </a>
</div>

