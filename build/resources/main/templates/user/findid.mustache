<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link href="/css/sign.css?after" rel="stylesheet">
    <title>find</title>
</head>
<body>
<div class="container" id="container">
    <div class="form-container sign-up-container">
        <!--비밀번호찾기-->
        <form action = "/user/findpassword" method="post">
            <h1>비밀번호 찾기</h1>
            <br><br><br>
            <input type="text" id="uid" name="uid" placeholder="아이디를 입력하세요."><br>
            <button type="submit" onclick="alert('메일로 비밀번호가 전송되었습니다.')">찾기</button>
            <br><br>
            <a href="/user/login">Sign In</a>
        </form>
    </div>
    <div class="form-container sign-in-container">
        <!--아이디찾기-->
        <form action = "/user/findid" method="post">
            <h1>아이디 찾기</h1>
            <br><br><br>
            <input  type="email" name="email" placeholder="이메일을 입력하세요."><br>
            <button type="submit">찾기</button>
            <br><br>
            <a href="/user/login">Sign In</a>
        </form>
    </div>
    <div class="overlay-container">
        <div class="overlay">
            <!--비밀번호찾기-->
            <div class="overlay-panel overlay-left">
                <h3>아이디를 잊으셨나요 ?</h3>
                <button class="ghost" id="signIn">아이디 찾기</button>
            </div>
            <!--아이디찾기-->
            <div class="overlay-panel overlay-right">
                <h3>비밀번호를 잊으셨나요 ?</h3>
                <button type="submit" class="ghost" id="signUp">비밀번호 찾기</button>
            </div>
        </div>
    </div>
</div>


<script type="text/javascript">
    const signUpButton = document.getElementById('signUp');
    const signInButton = document.getElementById('signIn');
    const container = document.getElementById('container');

    signUpButton.addEventListener('click', () => {
        container.classList.add("right-panel-active");
    });

    signInButton.addEventListener('click', () => {
        container.classList.remove("right-panel-active");
    });
</script>

</body>
</html>