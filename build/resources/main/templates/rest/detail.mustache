<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="/css/main.css?after" rel="stylesheet">
    <title>Restaurant details</title>
</head>
<body>
<!--    model 'rest'에 매장 상세 정보 등록하여 출력-->
    {{#rest}}
        매장 사진: <img src="{{store_img}}"><br>
        매장 이름: {{store_name}}<br>
        영업시간: {{store_time}}<br>
        주소: {{store_address}}<br>
        대표번호: {{store_phone}}<br>
        별점: {{store_star}}<br>
        <div id="menu">
        {{store_menu}}
        </div>
        <div id="Display"></div>
        리뷰: {{review_content}}
    {{/rest}}
<script type="text/javascript">

    const str = document.getElementById("menu").textContent; //div 내용 가져옴
    const arrs = str.split(", ");

    const Display = document.getElementById("Display"); // 문장을 표시할 div 가져옴

    arrs.forEach((arr, index) => {
        let text = arr.trim(); // 요소 앞 뒤 불필요한 공백 제거
        if (index === arrs.length - 1) {
            text = text.slice(0, -1); // 마지막 배열 요소 마지막 글자 제거
        }
        Display.append(text); //div에 글자 추가
        Display.appendChild(document.createElement("br")); // br 추가
    });
    
</script>
</body>

</html>