{{>layouts/detail_header}}

<div class="search">
    <form action="/storelist/search/{{uid}}" method="GET" role="search" style="height: 100%">
        <input style="font-size:16px; width:70%; padding:10px; border:0; outline:none; float:left;" type="text" placeholder="매장명을 입력하세요" name = "search" id = "search">
        <button style="height:40px; width:15%; border:0; background:rgba(0,100,0,0.76); color:#fff; font-size:16px; font-weight:bold; float:right; margin-top: 0">검색</button>
    </form>
</div>

<div class="store_list_box">
    <table style="border-spacing: 20px; width: 95%">
        <thead class="Store">
        <tr>
            <th style="width:18%">이미지</th>
            <th style="width:23%">이름</th>
            <th style="width:32%">시간</th>
            <th style="width:20%">전화번호</th>
            <th style="width:7%">별점</th>
        </tr>
        </thead>
        <tbody id="tbody">
        {{#searchList}}
            <tr>
                <td style="width:18%"><img src="{{store_img}}" width="70px" height="40px"></td>
                <td style="width:23%"><a href="/rest/{{id}}/{{uid}}">{{store_name}}</a></td>
                <td style="width:32%">{{store_time}}</td>
                <td style="width:20%">{{store_phone}}</td>
                <td style="width:7%">{{store_star}}</td>
            </tr>
        {{/searchList}}
        </tbody>
    </table>
    <div class="next">
    {{#hasPrev}}
        <a href="/storelist/search/{{uid}}?search={{keyword}}&page={{previous}}" role="button" class="btn btn-lg bi bi-caret-left-square-fill">이전</a>{{/hasPrev}}
    {{^hasPrev}}
        <a href="/storelist/search/{{uid}}?search={{keyword}}&page={{previous}}" role="button" class="btn btn-lg bi bi-caret-left-square-fill disabled"></a>{{/hasPrev}}
    {{#hasNext}}
        <a href="/storelist/search/{{uid}}?search={{keyword}}&page={{next}}" role="button" class="btn btn-lg bi bi-caret-right-square-fill">다음</a>
    {{/hasNext}}
    {{^hasNext}}
        <a href="/storelist/search/{{uid}}?search={{keyword}}&page={{next}}" role="button" class="btn btn-lg bi bi-caret-right-square-fill disabled"></a>
    {{/hasNext}}
</div>
</div>
<hr style="margin-top: 100px;">

{{>layouts/footer}}
