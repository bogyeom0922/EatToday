<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link href="/css/sign.css?after" rel="stylesheet">
    <title>SignIn</title>
</head>
<body>
    <div class="container" id="container">
        <!--회원가입-->
        <form action = "/user/Signup" method="post">
            <h1>Create Account</h1>
            <input type="uid" name="uid" placeholder="Id" />
            <input type="upassword" name="upassword" placeholder="Password" />
            <input type="nickname" name="uname" placeholder="Nickname" />
            <input type="email" name="email" placeholder="email"/>
            <button type="submit">Sign Up</button>
        </form>
        <!--로그인-->
        <form action = "/login" method="post">
            <h1>Sign in</h1>
            <br>
            <input type="uid" class="form-control" name="uid" placeholder="Id"/>
            <input type="upassword" class="form-control" name="upassword" placeholder="Password" />
            <a href="/user/findid">Forgot your id/password?</a>
            <button type="submit">Sign In</button>
        </form>
    </div>
</body>
</html>
